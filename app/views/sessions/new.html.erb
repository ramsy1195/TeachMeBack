<h2>Log In</h2>

<% if flash[:notice].present? %>
  <p><%= flash[:notice] %></p>
<% end %>

<%= form_with url: "/login", method: :post do |f| %>
  <div>
    <%= label_tag :email, "Email" %><br>
    <%= text_field_tag :email %>
  </div>

  <div>
    <%= label_tag :password, "Password" %><br>
    <%= password_field_tag :password %>
  </div>

  <%= submit_tag "Log in" %>
<% end %>

